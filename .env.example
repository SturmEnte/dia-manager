# Copy to ".env" in the repo root and adjust.

#
# Backend runtime (backend/config/config.go reads these)
#
PORT=8369
# The username, password and db have to be url encoded (e.g. # -> %23)
DATABASE_URI=postgres://user:password@your-postgres-host:5432/yourdb?sslmode=disable
TOKEN_LIFETIME=5
TOKEN_SECRET=change_me

#
# Frontend exposure (host port to bind; container serves on 80 internally)
#
FRONTEND_PORT=8081

#
# Nginx -> backend routing inside the compose network
#
BACKEND_HOST=backend

#
# Optional: if your frontend code reads a Vite env at build time
#
VITE_API_BASE=/